{
  "name": "aegis-agent-wallet",
  "description": "Aegis agentic wallet framework for Solana",
  "module": "src/index.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "bun run src/index.ts",
    "demo:devnet": "bun run scripts/demo.ts",
    "policy:check": "bun run scripts/policyCheck.ts",
    "db:generate": "bun drizzle-kit generate --config=drizzle.config.ts",
    "db:migrate": "bun run scripts/dbMigrate.ts",
    "db:push": "bun drizzle-kit push --config=drizzle.config.ts",
    "aegis:init": "bun run db:migrate",
    "test": "bun test",
    "test:watch": "bun test --watch"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "drizzle-kit": "^0.31.9"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "@openfort/openfort-node": "^0.8.2",
    "@solana-agent-kit/plugin-blinks": "^2.0.5",
    "@solana-agent-kit/plugin-defi": "^2.0.8",
    "@solana-agent-kit/plugin-misc": "^2.0.6",
    "@solana-agent-kit/plugin-token": "^2.0.9",
    "@solana/spl-token": "^0.4.14",
    "@solana/web3.js": "^1.98.4",
    "drizzle-orm": "^0.45.1",
    "pino": "^10.3.1",
    "solana-agent-kit": "^2.0.10",
    "zod": "^4.3.6"
  }
}
